{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**/*.ts", "**/*.tsx", "**/*.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "react/**", "react-router", "react-router/**"],
							":BLANK_LINE:",
							":NODE:",
							":BLANK_LINE:",
							["*", "*/**", "!@*/**", "!@/**", "!./**", "!../**"],
							["@*/**", "!@/**", "!./**"],
							":BLANK_LINE:"
						]
					}
				}
			}
		}
	}
}
